root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.js]
indent_size = 2
quote_type = single

[{*.sh,*.zsh,*.bash}]
indent_size = 2

[*.go]
indent_style = tab

# Windows files
[{*.cmd,*.bat,*reg,*.ps1,*.vbs,*.cs,*.csproj,*.fs,*.sln,*.xaml*,*.ahk}]
end_of_line = crlf
